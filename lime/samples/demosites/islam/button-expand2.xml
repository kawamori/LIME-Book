	p.button {text-align:center;color-index:7;line-height:30px;}
	#display	{   font-size:16px;
    color-index:7;
    grayscale-color-index:171 167;
        background-color-index:16;text-align:left;font-size:24px;
		top:400px;width:700px;height:150px;}
		:focus {background-color-index:11;}
		:blur {background-color-index:1;}
]]></style>

<script><![CDATA[
function alert(str){
	var obj = document.getElementById("display");
	obj.firstChild.data += str + "\r\n";
}


function focus(){
	var target = document.currentEvent.target;
	target.nextSibling.normalStyle.visibility = "visible";
}

function blur(){
	var target = document.currentEvent.target;
	target.nextSibling.normalStyle.visibility = "hidden";
	target.nextSibling.nextSibling.normalStyle.visibility = "hidden";
	}

function show(){
	var target = document.currentEvent.target;
	target.nextSibling.normalStyle.visibility = "visible";
}

]]></script>

</head>
